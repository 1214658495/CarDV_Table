<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_photo"
    tools:context="com.bydauto.car.i_key.cardv_table.MainActivity">

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#242131"
        android:paddingBottom="@dimen/x5"
        android:paddingTop="@dimen/x10"
        android:visibility="gone">

        <TextView
            android:id="@+id/btn_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/record_selector"
            android:gravity="center"
            android:text="记录仪"
            android:textColor="#cccccc"
            android:textSize="@dimen/x20"/>

        <TextView
            android:id="@+id/btn_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/video_selector"
            android:gravity="center"
            android:text="视频"
            android:textColor="#cccccc"
            android:textSize="@dimen/x20"/>

        <TextView
            android:id="@+id/btn_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/photo_selector"
            android:gravity="center"
            android:text="图库"
            android:textColor="#cccccc"
            android:textSize="@dimen/x20"/>

        <TextView
            android:id="@+id/btn_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@drawable/about_selector"
            android:gravity="center"
            android:text="我的"
            android:textColor="#cccccc"
            android:textSize="@dimen/x20"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y419">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/control_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y172"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/simicircle"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/y28"
            android:layout_weight="1.0"
            android:src="@mipmap/icon_album"/>

        <ImageView
            android:id="@+id/iv_takephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/y59"
            android:layout_weight="1.0"
            android:src="@mipmap/icon_takephoto"/>

        <ImageView
            android:id="@+id/iv_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/y79"
            android:layout_weight="1.0"
            android:src="@mipmap/icon_rec_on"/>

        <ImageView
            android:id="@+id/iv_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/y53"
            android:layout_weight="1.0"
            android:src="@mipmap/icon_mic_on"/>

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/y16"
            android:layout_weight="1.0"
            android:src="@mipmap/icon_setting"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/control_menu"
        android:layout_below="@+id/main_content">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</RelativeLayout>