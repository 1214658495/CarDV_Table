<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
              android:clickable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:background="@color/rosered" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x30"
            android:scaleType="fitStart"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/photo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/x36" />

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:gravity="center_vertical|right"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/x30" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="@dimen/x750"
        android:layout_height="@dimen/x422"
        android:background="@mipmap/empty_photo"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_export"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x100"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="@dimen/x20"
            android:drawableTop="@drawable/export_selector"
            android:gravity="center"
            android:text="导出"
            android:textColor="#666666"
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/btn_full"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x100"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="@dimen/x20"
            android:drawableTop="@drawable/full_screen_selector"
            android:gravity="center"
            android:text="全屏"
            android:textColor="#666666"
            android:textSize="@dimen/x30" />
    </LinearLayout>

</LinearLayout>